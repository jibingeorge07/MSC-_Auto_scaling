extends layout
block content
    main.py-5(style="background-image: url(https://theweddingplaybook.com/wp-content/uploads/Just-Engaged-Things-To-Do-Before-Wedding-Planning.jpg);background-size:cover;background-position:center;background-repeat: no-repeat;margin-top: 20px;height:100%;")
        div.m5(style="text-align:center;margin-top:10%")
            h1 Login
            br
            br
            form(method="post" action="/login")
                label(for="email") Email :
                input#email(type="email" name="email" required,style ="margin-left:2%")
                br
                br
                label(for="password") Password :
                input#password(type="password" name="password" required,style ="margin-left:1%")
                br
                br
                button(type="submit",style='background-color: #4CAF50; color: white; border: none; border-radius: 4px; cursor: pointer') Login
